{
  "name": "Meteor Shower",
  "description": "GitHub で閲覧したページへ自動でスターを付けます。",
  "author": "Pine Mizune",
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "version": "{{version}}",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
    	"*://github.com/*",
        "*://gist.github.com/*"
      ],
      "css": [
      ],
      "js": [
		"content_scripts.bundle.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "options_page": "options_page.html",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "*://github.com/*",
    "*://gist.github.com/*"
  ],
  "web_accessible_resources": [
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
